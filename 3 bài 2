import java.util.Scanner;

public class BMI_Calculator {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Nhập trọng lượng của bạn (kg): ");
        double weight = input.nextDouble();

        System.out.print("Nhập chiều cao của bạn (m): ");
        double height = input.nextDouble();

        // Tính chỉ số BMI
        double bmi = weight / (height * height);

        // In kết quả
        System.out.println("Chỉ số BMI của bạn là: " + bmi);

        // Đánh giá chỉ số BMI
        if (bmi < 18.5) {
            System.out.println("Dưới chuẩn - Gầy");
        } else if (bmi < 24.9) {
            System.out.println("Bình thường");
        } else if (bmi < 29.9) {
            System.out.println("Thừa cân");
        } else if (bmi < 34.9) {
            System.out.println("Béo phì cấp độ I");
        } else if (bmi < 39.9) {
            System.out.println("Béo phì cấp độ II");
        } else {
            System.out.println("Béo phì cấp độ III");
        }

        input.close();
    }
}
